@model TourViewModel

@{
    ViewData["Title"] = "Create";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm Mới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="KhachHangs" asp-route-strUrl="@Model.StrUrl" asp-action="DetailsRedirect">Danh Sách Tour</a></li>
                    <li class="breadcrumb-item active">Thêm Mới Tour</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Thêm Mới Tour</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <form method="post" autocomplete="off">
                <div class="p-4 border rounded">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">

                        <div class="col-md-3">
                            <label asp-for="Tour.NgayDen" class="control-label"></label>
                            <input type="text" asp-for="Tour.NgayDen" class="form-control maskInput" />
                            <span asp-validation-for="Tour.NgayDen" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Tour.NgayDi" class="control-label"></label>
                            <input type="text" asp-for="Tour.NgayDi" class="form-control maskInput" />
                            <span asp-validation-for="Tour.NgayDi" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Tour.ChuDeTour" class="control-label"></label>
                            <input asp-for="Tour.ChuDeTour" class="form-control" />
                            <span asp-validation-for="Tour.ChuDeTour" class="text-danger"></span>
                        </div>

                    </div>


                    <div class="form-group row">

                        <div class="col-md-6">
                            <label asp-for="Tour.TuyenTQ" class="control-label"></label>
                            <select asp-for="Tour.TuyenTQ" class="tuyenTQ select2-hidden-accessible" multiple="" data-placeholder="Chọn tỉnh" style="width: 100%;" data-select2-id="23" tabindex="-1" aria-hidden="true"
                                    asp-items="@(new SelectList(Model.Thanhphos, "Matp", "Tentp"))">
                            </select>
                            <span asp-validation-for="Tour.TuyenTQ" class="text-danger"></span>
                        </div>

                        <div class="col-md-2">
                            <label asp-for="Tour.SoKhachDK" class="control-label"></label>
                            <input asp-for="Tour.SoKhachDK" class="form-control" />
                            <span asp-validation-for="Tour.SoKhachDK" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Tour.SoHopDong" class="control-label"></label>
                            <input asp-for="Tour.SoHopDong" class="form-control" />
                            <span asp-validation-for="Tour.SoHopDong" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group row">

                        <div class="col-md-2">
                            <label asp-for="Tour.DoanhThuDK" class="control-label"></label>
                            <input type="text" asp-for="Tour.DoanhThuDK" class="form-control numbers" />
                            <span asp-validation-for="Tour.DoanhThuDK" class="text-danger"></span>
                        </div>

                        <div class="col-md-2">
                            <label asp-for="Tour.MaKH" class="control-label"></label>
                            <select asp-for="Tour.MaKH" class="form-control ddlMaKH"
                                    asp-items="@(new SelectList(Model.Companies, "CompanyId", "CompanyId"))">
                            </select>
                            <span asp-validation-for="Tour.MaKH" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Tour.TenKH" class="control-label"></label>
                            <input asp-for="Tour.TenKH" class="form-control" />
                            <span asp-validation-for="Tour.TenKH" class="text-danger"></span>
                        </div>

                        <div class="col-md-2">
                            <label asp-for="Tour.DienThoai" class="control-label"></label>
                            <input asp-for="Tour.DienThoai" class="form-control" />
                            <span asp-validation-for="Tour.DienThoai" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group row">

                        <div class="col-md-4">
                            <label asp-for="Tour.Email" class="control-label"></label>
                            <input asp-for="Tour.Email" class="form-control" />
                            <span asp-validation-for="Tour.Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-2">
                            <label asp-for="Tour.Fax" class="control-label"></label>
                            <input asp-for="Tour.Fax" class="form-control" />
                            <span asp-validation-for="Tour.Fax" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Tour.DiaChi" class="control-label"></label>
                            <input asp-for="Tour.DiaChi" class="form-control" />
                            <span asp-validation-for="Tour.DiaChi" class="text-danger"></span>
                        </div>

                    </div>
                    
                    <div class="form-group row">

                        <div class="col-md-3">
                            <label asp-for="Tour.NgayDamPhan" class="control-label"></label>
                            <input type="text" asp-for="Tour.NgayDamPhan" class="form-control maskInput" />
                            <span asp-validation-for="Tour.NgayDamPhan" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Tour.NgayKyHopDong" class="control-label"></label>
                            <input type="text" asp-for="Tour.NgayKyHopDong" class="form-control maskInput" />
                            <span asp-validation-for="Tour.NgayKyHopDong" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-3">
                            <label asp-for="Tour.NguoiKyHopDong" class="control-label"></label>
                            <input asp-for="Tour.NguoiKyHopDong" class="form-control" />
                            <span asp-validation-for="Tour.NguoiKyHopDong" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Tour.NguoiDaiDien" class="control-label"></label>
                            <input type="text" asp-for="Tour.NguoiDaiDien" class="form-control maskInput" />
                            <span asp-validation-for="Tour.NguoiDaiDien" class="text-danger"></span>
                        </div>

                    </div>
                    
                    <div class="form-group row">

                        <div class="col-md-3">
                            <label asp-for="Tour.DoiTacNuocNgoai" class="control-label"></label>
                            <input asp-for="Tour.DoiTacNuocNgoai" class="form-control" />
                            <span asp-validation-for="Tour.DoiTacNuocNgoai" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Tour.HinhThucGiaoDich" class="control-label"></label>
                            <input asp-for="Tour.HinhThucGiaoDich" class="form-control " />
                            <span asp-validation-for="Tour.HinhThucGiaoDich" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-3">
                            <label asp-for="Tour.HanXuatVe" class="control-label"></label>
                            <input type="text" asp-for="Tour.HanXuatVe" class="form-control maskInput" />
                            <span asp-validation-for="Tour.HanXuatVe" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Tour.NgayThanhLyHD" class="control-label"></label>
                            <input type="text" asp-for="Tour.NgayThanhLyHD" class="form-control maskInput" />
                            <span asp-validation-for="Tour.NgayThanhLyHD" class="text-danger"></span>
                        </div>

                    </div>
                    
                    <div class="form-group row">

                        <div class="col-md-3">
                            <label asp-for="Tour.DoiTacNuocNgoai" class="control-label"></label>
                            <select asp-for="Tour.LoaiTourId" class="form-control ddlMaKH"
                                    asp-items="@(new SelectList(Model.TourKinds, "CompanyId", "CompanyId"))"> <!-- tourkind: qltour-->
                            </select>
                            <span asp-validation-for="Tour.DoiTacNuocNgoai" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Tour.HinhThucGiaoDich" class="control-label"></label>
                            <input asp-for="Tour.HinhThucGiaoDich" class="form-control " />
                            <span asp-validation-for="Tour.HinhThucGiaoDich" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-3">
                            <label asp-for="Tour.HanXuatVe" class="control-label"></label>
                            <input type="text" asp-for="Tour.HanXuatVe" class="form-control maskInput" />
                            <span asp-validation-for="Tour.HanXuatVe" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Tour.NgayThanhLyHD" class="control-label"></label>
                            <input type="text" asp-for="Tour.NgayThanhLyHD" class="form-control maskInput" />
                            <span asp-validation-for="Tour.NgayThanhLyHD" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
                        <a class="btn btn-success" asp-controller="KhachHangs" asp-route-strUrl="@Model.StrUrl" asp-action="DetailsRedirect"><i class="fas fa-backward"></i></a>
                    </div>
                </div>
            </form>



        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

