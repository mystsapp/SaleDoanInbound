@model DSKhachHangViewModel
<!-- Main content -->
<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Cập Nhật Khách Hàng - <b>@Model.Tour.Sgtcode</b></h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button id="btnCloseKhachCreatePartial" type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <form asp-action="CreateInvoicePartial" method="post" id="frmEditKhachHangPartial" autocomplete="off">
                <div class="p-4 border rounded">

                    <input asp-for="KhachTour.Idkhach" type="hidden" /> <!-- this field is required-->
                    <input asp-for="KhachTour.Sgtcode" type="hidden" /> <!-- this field is required-->

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group row">

                        <div class="col-md-2">
                            <label asp-for="KhachTour.Stt" class="control-label"></label>
                            <input asp-for="KhachTour.Stt" class="form-control " id="txtStt" />
                            <span asp-validation-for="KhachTour.Stt" class="text-danger"></span>
                        </div>

                        <div class="col-md-2">
                            <label asp-for="KhachTour.Makh" class="control-label"></label>
                            <input asp-for="KhachTour.Makh" class="form-control " />
                            <span asp-validation-for="KhachTour.Makh" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="KhachTour.Hoten" class="control-label"></label>
                            <input asp-for="KhachTour.Hoten" class="form-control " />
                            <span asp-validation-for="KhachTour.Hoten" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="KhachTour.Ngaysinh" class="control-label"></label>
                            <input type="text" asp-for="KhachTour.Ngaysinh" class="form-control maskInput" />
                            <span asp-validation-for="KhachTour.Ngaysinh" class="text-danger"></span>
                        </div>

                        <div class="col-md-2 ">
                            <label asp-for="KhachTour.Phai" class="control-label"></label>
                            <select asp-for="KhachTour.Phai" class="form-control "
                                    asp-items="@(new SelectList(Model.GioiTinhs, "GioiTinhId", "GioiTinhName"))">
                            </select>
                            <span asp-validation-for="KhachTour.Phai" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group row">

                        <div class="col-md-3">
                            <label asp-for="KhachTour.Quoctich" class="control-label"></label>
                            <input asp-for="KhachTour.Quoctich" class="form-control " />
                            <span asp-validation-for="KhachTour.Quoctich" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="KhachTour.Hochieu" class="control-label"></label>
                            <input asp-for="KhachTour.Hochieu" class="form-control" />
                            <span asp-validation-for="KhachTour.Hochieu" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="KhachTour.Cmnd" class="control-label"></label>
                            <input asp-for="KhachTour.Cmnd" class="form-control " />
                            <span asp-validation-for="KhachTour.Cmnd" class="text-danger"></span>
                        </div>

                        <div class="col-md-3 ">
                            <label asp-for="KhachTour.Loaiphong" class="control-label"></label>
                            <input asp-for="KhachTour.Loaiphong" class="form-control" />
                            <span asp-validation-for="KhachTour.Loaiphong" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group row">

                        <div class="col-md-12">
                            <label asp-for="KhachTour.Diachi" class="control-label"></label>
                            <input asp-for="KhachTour.Diachi" class="form-control " />
                            <span asp-validation-for="KhachTour.Diachi" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group row">

                        <div class="col-md-3">
                            <label asp-for="KhachTour.Dienthoai" class="control-label"></label>
                            <input asp-for="KhachTour.Dienthoai" class="form-control " />
                            <span asp-validation-for="KhachTour.Dienthoai" class="text-danger"></span>
                        </div>

                        @*<div class="col-md-3">
                            <label asp-for="KhachTour.Visa" class="control-label"></label>
                            <input asp-for="KhachTour.Visa" class="form-control " />
                            <span asp-validation-for="KhachTour.Visa" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="KhachTour.YeuCauVisa" class="control-label"></label>
                            <input asp-for="KhachTour.YeuCauVisa" class="form-control " />
                            <span asp-validation-for="KhachTour.YeuCauVisa" class="text-danger"></span>
                        </div>*@

                    </div>

                    <div class="form-group row">
                        <div class="form-group">
                            <button type="button" id="btnEditKhachHangPartialSubmit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                            <button id="btnBackKhachHangEditPartial" type="button" class="btn btn-success"><i class="fas fa-backward"></i> Back</button>
                        </div>
                    </div>
                </div>
            </form>

        </div>

    </div>

</section>


