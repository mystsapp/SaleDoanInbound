                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.SGL)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.DBL)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.TPL)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.MOFP)</td>
