<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Thêm mới phân khu CN</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <form method="post" autocomplete="off" id="frmPhanKhuCNCreate">
                <div class="p-4 border rounded">
                    <div asp-validation-summary="None" class="text-danger"></div>

                    <div class="form-group row">

                        <div class="col-md-3">
                            <label asp-for="PhanKhuCN.RoleId" class="control-label"></label>
                            <select asp-for="PhanKhuCN.RoleId" class="form-control" id="txtTenKhuCN"
                                    asp-items="@(new SelectList(Model.Roles, "Id", "RoleName"))">
                                <option value="">-- Select --</option>
                            </select>
                            <span asp-validation-for="PhanKhuCN.RoleId" class="text-danger"></span>
                        </div>

                        <div class="col-md-8">
                            <label asp-for="PhanKhuCN.ChiNhanhs" class="control-label"></label>
                            <input type="hidden" asp-for="PhanKhuCN.ChiNhanhs" id="hidDdlChiNhanhs" />
                            <select class="chiNhanhs select2-hidden-accessible" multiple="" data-placeholder="Chọn chi nhánh" style="width: 100%;" data-select2-id="23" tabindex="-1" aria-hidden="true"
                                    asp-items="@(new SelectList(Model.Dmchinhanhs, "Macn", "Macn"))" id="ddlChiNhanhs">
                            </select>
                            <span asp-validation-for="PhanKhuCN.ChiNhanhs" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
                        <a class="btn btn-success" asp-controller="KhachHangs" asp-route-strUrl="@Model.StrUrl" asp-action="DetailsRedirect"><i class="fas fa-backward"></i></a>
                        <a class="btn btn-outline-info" asp-controller="Roles" asp-action="Index" title="Thêm tên phân khu"><i class="fas fa-table"></i></a>
                    </div>
                </div>
            </form>



        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
