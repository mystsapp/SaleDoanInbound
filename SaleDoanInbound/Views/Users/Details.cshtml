@model UserViewModel

@{
    ViewData["Title"] = "Edit";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="KhachHangs" asp-route-strUrl="@Model.StrUrl" asp-action="DetailsRedirect">Danh Sách Ngành Nghề</a></li>
                    <li class="breadcrumb-item active">Chi tiết user</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Thêm mới user</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <form method="post" autocomplete="off">
                <div class="p-4 border rounded">


                    <input type="hidden" asp-for="User.NguoiTao" />
                    <input type="hidden" asp-for="User.NgayTao" />

                    <input type="hidden" asp-for="OldPassword" />


                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">

                        <div class="col-md-2">
                            <label asp-for="User.Username" class="control-label"></label>
                            <input asp-for="User.Username" class="form-control" readonly />
                        </div>

                        <div class="col-md-3">
                            <label asp-for="User.HoTen" class="control-label"></label>
                            <input asp-for="User.HoTen" class="form-control" readonly />
                        </div>

                        <div class="col-md-3">
                            <label asp-for="User.DienThoai" class="control-label"></label>
                            <input asp-for="User.DienThoai" class="form-control" readonly />
                        </div>

                        <div class="col-md-4">
                            <label asp-for="User.Email" class="control-label"></label>
                            <input asp-for="User.Email" class="form-control" readonly />
                        </div>

                    </div>

                    <div class="form-group row">

                        <div class="col-md-3">
                            <label asp-for="User.MaCN" class="control-label"></label>
                            <input asp-for="User.MaCN" class="form-control" readonly />
                        </div>

                        <div class="col-md-3 ">
                            <label asp-for="User.PhongBanId" class="control-label"></label>
                            <input asp-for="User.PhongBanId" class="form-control" readonly />
                        </div>

                        <div class="col-md-3">
                            <label asp-for="User.RoleId" class="control-label"></label>
                            <input asp-for="User.Role.RoleName" class="form-control" readonly />
                        </div>

                        <div class="col-md-3">
                            <label asp-for="User.TrangThai" class="control-label"></label>
                            <br />
                            @if (Model.User.TrangThai)
                            {
                                <span class="badge badge-success">Kích hoạt</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Khóa</span>
                            }
                        </div>

                    </div>

                    <div class="form-group row">

                        <div class="col-md-6">
                            <label asp-for="User.PhongBans" class="control-label"></label>
                            <input asp-for="User.PhongBans" class="form-control" readonly/>
                            
                        </div>

                        <div class="col-md-3">
                            <label asp-for="User.NguoiTao" class="control-label"></label>
                            <input asp-for="User.NguoiTao" class="form-control" readonly />
                        </div>

                        <div class="col-md-3">
                            <label asp-for="User.NgayTao" class="control-label"></label>
                            <input value="@Model.User.NgayTao.ToShortDateString()" class="form-control" readonly />
                        </div>

                    </div>

                    <div class="form-group">
                        <a asp-action="Edit" asp-route-id="@Model.User.Id" asp-route-strUrl="@Model.StrUrl" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a class="btn btn-success" asp-controller="KhachHangs" asp-route-strUrl="@Model.StrUrl" asp-action="DetailsRedirect"><i class="fas fa-backward"></i></a>
                    </div>
                </div>
            </form>



        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

