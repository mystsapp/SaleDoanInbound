                                            <span id="confirmDeleteSpan_@item.Id" style="display: none">
                                                <span class="text-dark">Hủy?</span>
                                                <button type="button" data-id="@item.Id" data-url="@Model.StrUrl" class="btn btn-danger btnHuyInvoice">Yes</button>
                                                <button type="button" class="btn btn-primary" onclick="confirmDelete('@item.Id', false)">No</button>
                                            </span>

                                            <span id="deleteSpan_@item.Id">
                                                @if (item.HuyInvoice == true)
                                                {
                                                    <button type="button" class="btn btn-danger btn-sm disabled"><i class="fas fa-trash-alt"></i></button>

                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-danger btn-sm btnHuy" onclick="confirmDelete('@item.Id', true)"><i class="fas fa-trash-alt"></i></button>

                                                }
                                            </span>
                                        </form>
                                    </div>
                                </td>

                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Id)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Replace)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Type)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.Raw(item.Date.ToShortDateString())</td>
                                <td class="tdVal" data-id="@item.Id">@Html.Raw(item.Arr.ToShortDateString())</td>
                                <td class="tdVal" data-id="@item.Id">
                                    @if (item.Dep.HasValue)
                                    {
                                        @Html.Raw(item.Dep.Value.ToShortDateString())
                                    }
                                </td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Pax)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Currency)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Rate)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.MaKH)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.TenKhach)</td>
                                @*<td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.SGL)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.DBL)</td>
