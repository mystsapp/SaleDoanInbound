            $(function () {
                $(".datepicker").datepicker({
                    dateFormat: 'dd/mm/yy'
                });
            });
        </script>*@
    <script>
        $(function () {
            $('.select2').select2()
        });
    </script>

    <script src="~/js/Admin/InvoiceTour/createController.js"></script>
}

