@model BaoCaoViewModel

@{
    ViewData["Title"] = "DoanhSoTheoThang";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        @*<div class="row mb-2">
               <div class="col-sm-6">
                        <a class="btn btn-outline-info" asp-action="Create" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-plus"></i>&nbsp; Thêm Mới</a>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active">Danh sách tour</li>
                        </ol>
                    </div>
            </div>*@
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">BÁO CÁO DOANH SỐ THEO THÁNG</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <form autocomplete="off">
                <div class="p-2 border rounded" style="background-color: aliceblue;" id="search">

                    <div class="row">

                        <div class="col-md-3 rounded">
                            <br />
                            <label class="alert alert-info d-block">Năm trước</label>
                        </div>

                        <div class="col-md-2">
                            <label class="control-label">Từ tháng</label>
                            <select class="form-control" name="tuThang1"
                                    asp-items="@(new SelectList(Model.Thangs, "Name", "Name", ViewBag.tuThang1))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="control-label">Đến tháng</label>
                            <select class="form-control" name="denThang1"
                                    asp-items="@(new SelectList(Model.Thangs, "Name", "Name", ViewBag.denThang1))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="control-label">Năm</label>
                            <input type="number" class="form-control " name="nam1" value="@ViewBag.nam1" />
                        </div>

                        <div class="col-md-3">
                            <label class="control-label">Chi nhánh</label>
                            <select class="form-control" name="chiNhanh"
                                    asp-items="@(new SelectList(Model.Dmchinhanhs, "Macn", "Macn", ViewBag.chiNhanh))">
                            </select>
                        </div>

                    </div>

                    <div class="row">

                        <div class="col-md-3 rounded">
                            <br />
                            <label class="alert alert-info d-block">Năm báo cáo</label>
                        </div>

                        <div class="col-md-2">
                            <label class="control-label">Từ tháng</label>
                            <select class="form-control" name="tuThang2"
                                    asp-items="@(new SelectList(Model.Thangs, "Name", "Name", ViewBag.tuThang2))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="control-label">Đến tháng</label>
                            <select class="form-control" name="denThang2"
                                    asp-items="@(new SelectList(Model.Thangs, "Name", "Name", ViewBag.denThang2))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="control-label">Năm</label>
                            <input type="number" class="form-control" name="nam2" value="@ViewBag.nam2" />
                        </div>

                        <div class="col-md-3">
                            <label class="control-label">&#160;</label>
                            <div class="btn-group btn-block">
                                <button type="submit" class="btn btn-outline-primary " id="btnSubmitSearch" formaction="/BaoCaos/DoanhSoTheoThang" formmethod="post" title="Search"><i class="fas fa-search"></i></button>
                                <button type="submit" class="btn btn-outline-success " id="btnSubmitExcel" formaction="/BaoCaos/DoanhSoTheoThangExcel" formmethod="post" title="Export excel"><i class="fas fa-file-excel"></i></button>
                            </div>
                        </div>
                    </div>

                </div>

            </form>
            <br />
            <div style="overflow-x:auto;">
                <table class="table mytable text-nowrap tblTour" id="listDoanhSoTheoSale">
                    <thead>
                        <tr class="table-info">
                            @*<th>#</th>*@
                            @*<th>#</th>*@
                            <th>STT</th>
                            <th>Tháng</th>
                            <th>Số khách năm @(" " + ViewBag.nam1) </th>
                            <th>Doanh số @(" " + ViewBag.nam1) </th>
                            <th>Doanh thu @(" " + ViewBag.nam1) </th>
                            
                            <th>Số khách năm @(" " + ViewBag.nam2) </th>
                            <th>Doanh số @(" " + ViewBag.nam2) </th>
                            <th>Doanh thu @(" " + ViewBag.nam2) </th>

                            <th>Tỉ lệ SK</th>
                            <th>Tỉ lệ DT</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TourBaoCaoTheoThangs1 != null && Model.TourBaoCaoTheoThangs1 != null)
                        {
                            int i = 1;
                            foreach (var item in Model.Thangs)
                            {

                                <tr class="cursor-pointer ">
                                    <td>@i</td>
                                    <td>Tháng + @(" " + item.Name)</td>
                                    
                                    @*<td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.CompanyName)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.NgayDen.ToString("dd/MM/yyyy"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.NgayDi.ToString("dd/MM/yyyy"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.ChuDeTour)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.TuyenTQ)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.SoKhachDK.ToString("N0"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.DoanhThuDK.ToString("N0"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.SoKhachTT.ToString("N0"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.DoanhThuTT.ToString("N0"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.NguoiTao)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.NgayTao.ToString("dd/MM/yyyy"))</td>*@

                                </tr>

                                i++;

                            }

                        }

                    </tbody>

                </table>
            </div>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section Scripts{
    <script>

        $(function () {
            //$("#datepicker").datepicker({
            //    dateFormat: 'dd/mm/yy'
            //});

            $('#listDoanhSoTheoSale').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": false,
                "info": false,
                "autoWidth": true,
            });
        });
    </script>
    @*<script src="~/js/Admin/DoanhSoTheoSale/doanhSoTheoSaleController.js"></script>*@

    <style>
        #listDoanhSoTheoSale {
            box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        #search {
            box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        .tblTour .cursor-pointer:hover {
            background-color: #3E5C9A;
            cursor: pointer;
        }

        .hoverClass {
            background-color: #3E5C9A;
        }
    </style>
}

