<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">BÁO CÁO DOANH SỐ THEO THÁNG</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <form autocomplete="off">
                <div class="p-2 border rounded" style="background-color: aliceblue;" id="search">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">

                        <div class="col-md-3 rounded">
                            <br />
                            <label class="alert alert-info d-block">Năm trước</label>
                        </div>

                        <div class="col-md-2">
                            <label class="control-label">Từ tháng</label>
                            <select class="form-control" name="tuThang1"
                                    asp-items="@(new SelectList(Model.Thangs, "Name", "Name", ViewBag.tuThang1))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="control-label">Đến tháng</label>
                            <select class="form-control" name="denThang1"
                                    asp-items="@(new SelectList(Model.Thangs, "Name", "Name", ViewBag.denThang1))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="control-label">Năm</label>
                            <input type="number" class="form-control " name="nam1" value="@ViewBag.nam1" />
                        </div>

                        <div class="col-md-3">
                            <label class="control-label">Chi nhánh</label>
                            <select class="form-control" name="chiNhanh"
                                    asp-items="@(new SelectList(Model.Dmchinhanhs, "Macn", "Macn", ViewBag.chiNhanh))">
                            </select>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-3 rounded">
                            <br />
                            <label class="alert alert-info d-block">Năm báo cáo</label>
                        </div>

                        <div class="col-md-2">
                            <label class="control-label">Từ tháng</label>
                            <select class="form-control" name="tuThang2"
                                    asp-items="@(new SelectList(Model.Thangs, "Name", "Name", ViewBag.tuThang2))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="control-label">Đến tháng</label>
                            <select class="form-control" name="denThang2"
                                    asp-items="@(new SelectList(Model.Thangs, "Name", "Name", ViewBag.denThang2))">
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="control-label">Năm</label>
                            <input type="number" class="form-control" name="nam2" value="@ViewBag.nam2" />
                        </div>

                        <div class="col-md-3">
                            <label class="control-label">&#160;</label>
                            <div class="btn-group btn-block">
                                <button type="submit" class="btn btn-outline-primary " id="btnSubmitSearch" formaction="/BaoCaos/DoanhSoTheoThang" formmethod="post" title="Search"><i class="fas fa-search"></i></button>
                                <button type="submit" class="btn btn-outline-success " id="btnSubmitExcel" formaction="/BaoCaos/DoanhSoTheoThangExcel" formmethod="post" title="Export excel"><i class="fas fa-file-excel"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <br />
            <div style="overflow-x:auto;">
                <table class="table mytable text-nowrap tblTour" id="listDoanhSoTheoSale">
                    <thead>
                        <tr class="table-info">
                            @*<th>#</th>*@
                            @*<th>#</th>*@
                            <th>STT</th>
                            <th>Tháng</th>

                            <th>Số khách năm @(" " + ViewBag.nam1) </th>
                            <th>Doanh số @(" " + ViewBag.nam1) </th>
                            <th>Doanh thu @(" " + ViewBag.nam1) </th>

                            <th>Số khách năm @(" " + ViewBag.nam2) </th>
                            <th>Doanh số @(" " + ViewBag.nam2) </th>
                            <th>Doanh thu @(" " + ViewBag.nam2) </th>

                            <th>Tỉ lệ SK</th>
                            <th>Tỉ lệ DT</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TourBaoCaoTheoThangs1 != null && Model.TourBaoCaoTheoThangs2 != null)
                        {
                            var tourBaoCao1 = Model.TourBaoCaoTheoThangs1.OrderBy(x => int.Parse(x.Thang)).ToArray();
                            var tourBaoCao2 = Model.TourBaoCaoTheoThangs2.OrderBy(x => int.Parse(x.Thang)).ToArray();

                            for (int i = 0; i <= 11; i++)
                            {

                                <tr class="cursor-pointer ">
                                    <td>@(i + 1)</td>
                                    <td>Tháng @(" " + (i + 1))</td>

                                    <!-- nam trước -->
                                    <td class="tdVal">
                                        @{
                                            var sk1 = tourBaoCao1[i].SoKhach.ToString("N0");

                                        }
                                        @Html.DisplayFor(m => sk1)
                                    </td>
                                    <td class="tdVal">
                                        @{
                                            var doanhSo1 = tourBaoCao1[i].DoanhSo.ToString("N0");

                                        }
                                        @Html.DisplayFor(m => doanhSo1)
                                    </td>
                                    @*//Doanh thu = Doanh So / 1,1 = Doanh So / 11/10 =DS *10/11*@
                                    @if (tourBaoCao1[i].DoanhSo == 0)
                                    {
                                        <td>0</td>
                                    }
                                    else
                                    {

                                        var doanhThu1 = (tourBaoCao1[i].DoanhSo * 10 / 11).ToString("N0");
                                        doanhThu1Tong += decimal.Parse(doanhThu1);
                                        <td class="tdVal">@(doanhThu1)</td>
                                    }
                                    <!-- nam trước -->
                                    <!-- nam sau -->
                                    <td class="tdVal">
                                        @{
                                            var sk2 = tourBaoCao2[i].SoKhach.ToString("N0");

                                        }
                                        @Html.DisplayFor(m => sk2)
                                    </td>
                                    <td class="tdVal">
                                        @{
                                            var doanhSo2 = tourBaoCao2[i].DoanhSo.ToString("N0");

                                        }
                                        @Html.DisplayFor(m => doanhSo2)
                                    </td>
                                    @*//Doanh thu = Doanh So / 1,1 = Doanh So / 11/10 =DS *10/11*@
                                    @if (tourBaoCao2[i].DoanhSo == 0)
                                    {
                                        <td>0</td>
                                    }
                                    else
                                    {
                                        var doanhThu2 = (tourBaoCao2[i].DoanhSo * 10 / 11).ToString("N0");
                                        doanhThu2Tong += decimal.Parse(doanhThu2);
                                        <td class="tdVal">@(doanhThu2)</td>
                                    }
                                    <!-- nam sau -->
                                    <!-- ty le -->
                                    @{
                                        decimal tyLeSK = 0, tyLeDT = 0;
                                        // SK
                                        if (int.Parse(sk1) > 0)
                                        {
                                            tyLeSK = int.Parse(sk2) / int.Parse(sk1) * 100;
                                        }
                                        else
                                        {
                                            tyLeSK = 0;
                                        }
                                        // DT
                                        if (decimal.Parse(doanhSo1) > 0)
                                        {
                                            tyLeDT = decimal.Parse(doanhSo2) / decimal.Parse(doanhSo1) * 100;
                                        }
                                        else
                                        {
                                            tyLeDT = 0;
                                        }
                                        <td class="tdVal">@(tyLeSK)%</td>
                                        <td class="tdVal">@(tyLeDT)%</td>
                                    }
                                    <!-- ty le -->
                                </tr>

                            }

                        }
                        <tr>
                            <td></td>
                            <td><strong>Tổng Cộng:</strong></td>
                            <td>
                                @{

                                    tongSK1 = Model.TourBaoCaoTheoThangs1.Sum(x => x.SoKhach);
                                    <strong>@tongSK1.ToString("N0")</strong>
                                }

                            </td> <!-- tong SK1-->
                            <td><strong>@Model.TourBaoCaoTheoThangs1.Sum(x => x.DoanhSo).ToString("N0")</strong></td> <!-- tong DS1-->
                            <td><strong>@doanhThu1Tong.ToString("N0")</strong></td><!-- tong DT1-->

                            <td>
                                @{

                                    tongSK2 = Model.TourBaoCaoTheoThangs2.Sum(x => x.SoKhach);
                                    <strong>@tongSK2.ToString("N0")</strong>
                                }

                            </td>
                            <td><strong>@Model.TourBaoCaoTheoThangs2.Sum(x => x.DoanhSo).ToString("N0")</strong></td>
                            <td><strong>@doanhThu2Tong.ToString("N0")</strong></td>
                            <td>
                                <!--tyLeSKCuaTong = tongSK2 / tongSK1 * 100-->
                                @{
                                    decimal tyLeSKCuaTong = 0;

                                    if (tongSK1 > 0)
                                    {
                                        tyLeSKCuaTong = Convert.ToDecimal(tongSK2) / Convert.ToDecimal(tongSK1) * 100;
                                        <strong>@tyLeSKCuaTong.ToString("N0")%</strong>
                                    }
                                    else
                                    {
                                        <strong>0%</strong>
                                    }

                                }

                            </td>
                            <td>
                                <!--tyLeDTCuaTong = doanhThu2Tong / doanhThu1Tong * 100-->
                                @{
                                    decimal tyLeDTCuaTong = 0;

                                    if (doanhThu1Tong > 0)
                                    {
                                        tyLeDTCuaTong = doanhThu2Tong / doanhThu1Tong * 100;
                                        <strong>@tyLeDTCuaTong.ToString("N0")%</strong>
                                    }
                                    else
                                    {
                                        <strong>0%</strong>
                                    }

                                }

                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
