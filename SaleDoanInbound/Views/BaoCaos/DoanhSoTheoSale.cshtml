@model BaoCaoViewModel

@{
    ViewData["Title"] = "DoanhSoTheoSale";
    int i = 1;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        @*<div class="row mb-2">
               <div class="col-sm-6">
                        <a class="btn btn-outline-info" asp-action="Create" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-plus"></i>&nbsp; Thêm Mới</a>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active">Danh sách tour</li>
                        </ol>
                    </div>
            </div>*@
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">BÁO CÁO DOANH SỐ THEO SALES</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <form autocomplete="off">

                <div class="container" style="padding-bottom:10px; background-color: aliceblue;" id="search">

                    <div class="col-md-12">
                        <div class="row" style="padding-top: 10px;">

                            <div class="col-md-3">
                                Từ ngày
                                <input class="form-control maskInput" name="searchFromDate" value="@ViewBag.searchFromDate" />
                            </div>

                            <div class="col-md-3">
                                Đến ngày
                                <input class="form-control maskInput" name="searchToDate" value="@ViewBag.searchToDate" />
                            </div>

                            <div class="col-md-3">
                                Chi nhánh
                                @*<input class="form-control" name="searchString" value="@ViewBag.searchString" />*@
                                <select class="form-control" name="Macn"
                                        asp-items="@(new SelectList(Model.Dmchinhanhs, "Macn", "Macn", ViewBag.Macn))">
                                </select>
                            </div>

                            <div class="col-md-3">
                                <br />
                                <div class="btn-group btn-block">
                                    <button type="submit" class="btn btn-outline-primary " id="btnSubmitSearch" formaction="/BaoCaos/DoanhSoTheoSale" formmethod="get" title="Search"><i class="fas fa-search"></i></button>
                                    <button type="submit" class="btn btn-outline-success " id="btnSubmitExcel" formaction="/BaoCaos/DoanhSoTheoSaleExcel" formmethod="post" title="Export excel"><i class="fas fa-file-excel"></i></button>
                                    <button type="submit" class="btn btn-outline-warning " id="btnSubmitExcel" formaction="/BaoCaos/DoanhSoTheoSaleExcelChart" formmethod="post" title="Export excel chart"><i class="fas fa-chart-bar"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <br />
            <div style="overflow-x:auto;">
                <table class="table mytable text-nowrap tblTour" id="listDoanhSoTheoSale">
                    <thead>
                        <tr class="table-info">
                            @*<th>#</th>*@
                            @*<th>#</th>*@
                            <th>STT</th>
                            <th>@Html.DisplayNameFor(m => m.TourDtos.FirstOrDefault().Sgtcode)</th>
                            <th>@Html.DisplayNameFor(m => m.TourDtos.FirstOrDefault().CompanyName)</th>
                            <th>@Html.DisplayNameFor(m => m.TourDtos.FirstOrDefault().NgayDen)</th>
                            <th>@Html.DisplayNameFor(m => m.TourDtos.FirstOrDefault().NgayDi)</th>
                            <th>@Html.DisplayNameFor(m => m.TourDtos.FirstOrDefault().ChuDeTour)</th>
                            <th>@Html.DisplayNameFor(m => m.TourDtos.FirstOrDefault().TuyenTQ)</th>
                            <th>@Html.DisplayNameFor(m => m.TourDtos.FirstOrDefault().SoKhachDK)</th>
                            <th>@Html.DisplayNameFor(m => m.TourDtos.FirstOrDefault().DoanhThuDK)</th>
                            <th>@Html.DisplayNameFor(m => m.TourDtos.FirstOrDefault().SoKhachTT)</th>
                            <th>@Html.DisplayNameFor(m => m.TourDtos.FirstOrDefault().DoanhThuTT)</th>
                            <th>Sales</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TourDtos != null)
                        {
                            @foreach (var item in Model.TourDtos)
                            {

                                <tr class="cursor-pointer " data-huy="@item.HuyTour">
                                    <td>@i</td>
                                    @switch (item.TrangThai)
                                    {

                                        case "0":
                                            <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                            break;
                                        case "1":
                                            <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                            break;
                                        case "2":
                                            <td class="tdVal bg-yellow" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                            break;
                                        case "3":
                                            <td class="tdVal " style="background-color: chartreuse" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                            break;
                                        case "4":
                                            <td class="tdVal bg-red" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                            break;
                                    }
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Sgtcode)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.CompanyName)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.NgayDen.ToString("dd/MM/yyyy"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.NgayDi.ToString("dd/MM/yyyy"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.ChuDeTour)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.TuyenTQ)</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.SoKhachDK.ToString("N0"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.DoanhThuDK.ToString("N0"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.SoKhachTT.ToString("N0"))</td>
                                    <td class="tdVal" data-id="@item.Id">@Html.Raw(item.DoanhThuTT.ToString("N0"))</td>

                                </tr>

                            }
                        }

                    </tbody>

                </table>
            </div>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section Scripts{
    <script>

        $(function () {
            //$("#datepicker").datepicker({
            //    dateFormat: 'dd/mm/yy'
            //});

            $('#listDoanhSoTheoSale').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true,
            });
        });
    </script>
    <script src="~/js/Admin/DoanhSoTheoSale/doanhSoTheoSaleController.js"></script>

    <style>
        #listDoanhSoTheoSale {
            box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        .tblTour .cursor-pointer:hover {
            background-color: #3E5C9A;
            cursor: pointer;
        }

        .hoverClass {
            background-color: #3E5C9A;
        }
    </style>
}

