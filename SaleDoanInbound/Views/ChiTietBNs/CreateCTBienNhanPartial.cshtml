@model ChiTietBNViewModel
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Thêm mới chi tiết BN - <b>@Model.BienNhan.Id</b></h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <form method="post" autocomplete="off" id="frmCreateCTBienNhanPartial">
                <div class="p-4 border rounded">

                    <input asp-for="ChiTietBN.BienNhanId" type="hidden" /> <!-- this field is required - foreignkey to invoice-->
                    <input asp-for="StrUrl" type="hidden" value="@Model.StrUrl" /> <!-- this field for action post-->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">

                        <div class="col-md-9">
                            <label asp-for="ChiTietBN.Descript" class="control-label"></label>
                            <input asp-for="ChiTietBN.Descript" class="form-control" id="txtDescript" />
                            <span asp-validation-for="ChiTietBN.Descript" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="ChiTietBN.Amount" class="control-label"></label>
                            <input asp-for="ChiTietBN.Amount" class="form-control numbers" id="txtAbount" />
                            <span asp-validation-for="ChiTietBN.Amount" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="form-group">
                            <button type="button" id="btnCreateCTBienNhanPartialSubmit" class="btn btn-primary"><i class="fas fa-save"></i></button>
                            <button type="button" id="btnCreateCTBienNhanPartialBack" class="btn btn-success"><i class="fas fa-backward"></i></button>
                        </div>
                    </div>
                </div>
            </form>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

